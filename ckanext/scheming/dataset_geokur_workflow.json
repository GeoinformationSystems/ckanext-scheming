{
    "scheming_version": 2,
    "dataset_type": "workflow",
	"skip_resources": true,
    "about": "CKAN workflow schema for GeoKur",
    "about_url": "https://github.com/GeoinformationSystems/ckanext-scheming",
    "dataset_fields": [
        {
            "field_name": "title",
            "label": "Title",
            "preset": "title"
        },
        {
            "field_name": "name",
            "label": "Identifier",
            "preset": "name"
        },
        {
            "field_name": "notes",
            "label": "Short Description / Abstract",
            "preset": "notes"
        },
        {
            "field_name": "documentation",
            "label": "Link to full Documentation / Paper",
            "preset": "single_link"
        },
        {
            "field_name": "processes",
            "label": "Processes - ToDo: with fancy dropdown and add-button",
            "help_text": "All processes that are included in the worklow.",
			"form_snippet": "select_dataset_by_type.html",
			"required_type": "process"
        },
        {
            "field_name": "owner_org",
            "label": "Organization",
            "preset": "owner_org"
        }
    ],
	"resource_fields": [
        {
            "field_name": "url",
            "label": "URL",
            "preset": "resource_url",
            "form_placeholder": "http://example.com/my-data.csv"
        },
        {
            "field_name": "name",
            "label": "Name",
            "validators": "if_empty_same_as(url) unicode",
            "form_placeholder": "leave blank to use resource file name"
        },
        {
            "field_name": "format",
            "label": "Format",
            "preset": "resource_format",
            "form_placeholder": "eg. CSV, XML or JSON"
        }
    ]
}